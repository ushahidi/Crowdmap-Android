<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.ActionBar.Transparent" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="TextAppearance.ActionBar.Title"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TransparentActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@android:color/black</item>

        <item name="android:titleTextStyle">@style/TextAppearance.ActionBar.Title</item>
    </style>



    <style name="Transparent">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <style name="GridView">
        <item name="android:horizontalSpacing">3dp</item>
        <item name="android:numColumns">@integer/column_count</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:verticalSpacing">3dp</item>
    </style>

    <style name="TextAppearanceMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
